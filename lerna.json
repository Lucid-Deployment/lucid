{
  "packages": [
    "packages/*",
    "packages/catalog/api-interfaces",
    "packages/catalog/data-access",
    "packages/test/handler-resolver",
    "packages/identity/api-interfaces"
  ],
  "npmClient": "yarn",
  "version": "independent",
  "useWorkspaces": true,
  "command": {
    "version": { "exact": true },
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish",
      "ignoreChanges": ["**/stories/**", "**/tests/**"],
      "allowBranch": "main"
    }
  }
}
