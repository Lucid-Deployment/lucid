{
  "compilerOptions": {
    "module": "CommonJS",
    "composite": true,
    "target": "ES2018",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "declaration": true,
    "importsNotUsedAsValues": "error",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["**/node_modules/**"]
}
